<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %5p %m (%c{1.}) &lt;%t&gt; %n"/>
        </Console>

        <RollingRandomAccessFile
                name="producer"
                fileName="log/producer.log"
                filePattern="log/producer.%i.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %5p %m &lt;%t&gt; %n"/>
            <filters>

            </filters>
            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy fileIndex="5"/>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile
                name="consumer"
                fileName="log/consumer.log"
                filePattern="log/consumer.%i.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %5p %m &lt;%t&gt; %n"/>
            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy fileIndex="5"/>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <Logger name="com.sbt.hakaton.task8" level="DEBUG" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="com.sbt.hakaton.task8.consumer.SimpleConsumer" level="DEBUG" additivity="false">
            <AppenderRef ref="consumer"/>
        </Logger>
        <Logger name="com.sbt.hakaton.task8.producer.SimpleProducer" level="DEBUG" additivity="false">
            <AppenderRef ref="producer"/>
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>