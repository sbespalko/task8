<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %5p &lt;%t&gt; %m (%c{1.})%n"/>
        </Console>


        <RollingRandomAccessFile
                name="producer"
                fileName="log/producer.log"
                filePattern="log/producer.%i.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %5p &lt;%t&gt; %m%n"/>
            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy fileIndex="5"/>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile
                name="consumer"
                fileName="log/consumer.log"
                filePattern="log/consumer.%i.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %5p &lt;%t&gt; %m%n"/>
            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy fileIndex="5"/>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <Logger name="com.sbt.hakaton.task8" level="DEBUG" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="producer"/>
            <AppenderRef ref="consumer"/>
        </Logger>
        <Root level="WARN">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>